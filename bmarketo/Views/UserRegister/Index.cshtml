@model UserRegisterViewModel
@{
    ViewData["Title"] = "Register User";
}

<div class="d-flex justify-content-center">
    <form method="post" enctype="multipart/form-data" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name:</label>
            <input asp-for="FirstName" type="text" class="form-control" />
            <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name:</label>
            <input asp-for="LastName" type="text" class="form-control" />
            <small><span asp-validation-for="LastName" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email:</label>
            <input asp-for="Email" class="form-control" />
            <small><span asp-validation-for="Email" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="StreetName" class="form-label">Street Name:</label>
            <input asp-for="StreetName" type="text" class="form-control" />
            <small><span asp-validation-for="StreetName" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="PostalCode" class="form-label">Postal Code:</label>
            <input asp-for="PostalCode" type="text" class="form-control" />
            <small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label">City:</label>
            <input asp-for="City" type="text" class="form-control" />
            <small><span asp-validation-for="City" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="Company" class="form-label">Company:</label>
            <input asp-for="Company" type="text" class="form-control" />
            <small><span asp-validation-for="Company" class="text-danger"></span></small>
        </div>


        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password:</label>
            <input asp-for="Password" class="form-control" />
            <small><span asp-validation-for="Password" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password:</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
        </div>
        <div class="mb-3 form-group">
            <label asp-for="ImageFile"></label>
            <input asp-for="ImageFile" />
            <span asp-validation-for="ImageFile" class="error"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TermsAndAgreement"></label>
            <input asp-for="TermsAndAgreement"/>
            <small><span class="checkmark"></span></small>
            <span asp-validation-for="TermsAndAgreement" class="error"></span>
        </div>
        <button type="submit" class="btn-theme">Join the club!</button>
    </form>
</div>
