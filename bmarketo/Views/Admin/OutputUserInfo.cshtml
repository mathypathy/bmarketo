@model IEnumerable<SecureUserOutputViewModel>

<div class="d-flex justify-content-center" >

<table class="table" style="margin-bottom:800px; width:1000px">
    <thead>
        <tr>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>Role:</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Roles</td>
            <td>
             <form asp-controller="Admin" asp-action="ChangeUserRole" method="post">
                        <input type="hidden" name="userName" value="@user.FirstName, @user.LastName"/>
                        <select name="newRole" style="width:200px; height:50px; ">
                    <option value="Admin">Admin</option>
                    <option value="USER">User</option>
                </select>
                <button class="btn-theme" type="submit" style="height:50px; width:200px;">Change Role</button>
              </form>
                    </td>
            </tr>
        }
         
        </tbody>
</table>
</div>