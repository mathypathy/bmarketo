@model ContactFormViewModel

<section class="contactform">
    
    <div class="container">
        <partial name="/views/partials/_HeroPlaceHolder.cshtml" />
        <div class="formsquare">
            <h3>Do you have any questions? contact us here:</h3>
            <hr>

            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="FullName">Your Name*</label>
                    <div class="col-sm-10">
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Enter your name">
                    </div>
                    <small><span asp-validation-for="FullName" class="text-danger"></span></small>
                </div>
                <div class="form-group row">
                    <label asp-for="Email">Your Email*</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <small><span asp-validation-for="Email" class="text-danger"></span></small>
                </div>
                <div class="form-group row">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <div class="col-sm-10">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number">
                    </div>
                    <small><span asp-validation-for="PhoneNumber" class="text-danger"></span></small>
                </div>
                <div class="form-group row">
                    <label asp-for="Company">Company (optional)</label>
                    <div class="col-sm-10">
                        <input asp-for="Company" class="form-control" placeholder="Enter your company name ">
                    </div>
                    <small><span asp-validation-for="Company" class="text-danger"></span></small>
                </div>
                <div class="commentsection">
                    <label asp-for ="Comment" class="commentlabel">Comment</label>
                    <textarea asp-for="Comment" class="commentarea" rows="3"></textarea>
                    <small><span asp-validation-for="Comment" class="text-danger"></span></small>
                </div>
                <button type="submit" class="btn-theme">Submit</button>
            </form>
            

        </div>
    </div>

</section>
