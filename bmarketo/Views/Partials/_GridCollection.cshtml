@model GridCollectionViewModel

@if (Model != null){
    <section class="cardgrid">
        @if(!string.IsNullOrEmpty(Model.Title))
        {
           <h1 class="headline">@Model.Title</h1>
        }
       

        @if (Model.BreadCrumbs != null)
        {
            <nav class="breadcrumbs">
                <ol class="breadcrumb">
                    @foreach (var breadcrumb in Model.BreadCrumbs)
                    {
                        <li class="breadcrumb-item"><a href="#">@breadcrumb</a></li>
                    }

                </ol>
            </nav>
        }

        @if (Model.GridItems != null)
        {
            <div class="container">
                @foreach (var item in Model.GridItems)
                {
                    <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item"/>
                }
            </div>
        }


        @if (Model.LoadMore)
        {
            <button class="btn-load-more">LOAD MORE <i class="fa-solid fa-arrow-rotate-right" style="font-size:12px;"></i></button>
        }


    </section>
    <!--Cardgrid end-->
}